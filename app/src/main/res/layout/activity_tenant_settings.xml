<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Configure your POS system settings"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <!-- Domain Configuration Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/domainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domain Configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/currentDomainLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Domain:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/currentDomainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not configured"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"
                android:padding="8dp"
                android:background="?android:attr/colorBackground"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/domainInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tenant Domain"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/domainEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:text="https://gmexperteng.com" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/helpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example: https://yourdomain.com\nMake sure to include http:// or https://"
                android:textSize="11sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlockDomainButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlock Domain Editing"
                app:iconGravity="textStart"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:enabled="false"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Data Synchronization Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/syncCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/domainCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/syncTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Synchronization"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/syncSubtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manually sync all data (products, clients, warehouses, payment methods, sales) from the server"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/syncButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Data Now"
                android:icon="@android:drawable/ic_menu_upload"
                app:iconGravity="textStart" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Warehouse & Client Selection Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selectionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/syncCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/warehouseTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warehouse Selection"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/warehouseSubtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select which warehouse to use for this device"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/warehouseInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Warehouse"
                android:layout_marginBottom="20dp"
                android:minHeight="56dp"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/warehouseSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:minHeight="56dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/dividerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginVertical="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/clientTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Selection"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/clientSubtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select default client for sales (default: Walk-in)"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/clientInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Client"
                android:minHeight="56dp">

                <AutoCompleteTextView
                    android:id="@+id/clientSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:minHeight="56dp" />
            </com.google.android.material.textfield.TextInputLayout>
            
            <View
                android:id="@+id/paymentMethodDividerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginVertical="12dp" />
            
            <TextView
                android:id="@+id/paymentMethodTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method Selection"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="4dp" />
            
            <TextView
                android:id="@+id/paymentMethodSubtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select default payment method for checkout (default: Cash)"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp" />
            
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/paymentMethodInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Payment Method"
                android:minHeight="56dp">
                
                <AutoCompleteTextView
                    android:id="@+id/paymentMethodSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:minHeight="56dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
